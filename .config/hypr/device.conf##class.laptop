
# See https://wiki.hyprland.org/Configuring/Monitors/
monitor=,preferred,auto,1.75
monitor=,highres,auto,1.75

# unscale XWayland
xwayland {
  force_zero_scaling = true
}

# toolkit-specific scale
env = GDK_SCALE,"1.5"
env = XCURSOR_SIZE,32

exec-once = waybar & blueberry-tray & nm-applet --indicator
